{
  "manifest_version": 3,
  "name": "Atomic Tasker",
  "version": "1.0.0",
  "description": "A productivity extension inspired by Atomic Habits - build consistent habits through small, manageable tasks",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Atomic Tasker - Task Management",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
